---
// src/pages/authors/index.astro
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import AuthorCard from '../../components/AuthorCard.astro';
import { getAllAuthors, getAllPosts } from '../../../lib/cosmic';
import type { Author, Post } from '../../../types';

const authors = await getAllAuthors() as Author[];
const posts = await getAllPosts() as Post[];

// Count posts per author
const authorPostCounts = authors.map(author => {
  const count = posts.filter(post => post.metadata?.author?.id === author.id).length;
  return { author, count };
});
---

<Layout 
  title="Authors - Modern Blog"
  description="Meet our talented writers and contributors. Discover their stories and insights."
>
  <Header />
  
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">Our Authors</h1>
    
    {authorPostCounts && authorPostCounts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {authorPostCounts.map(({ author, count }) => (
          <AuthorCard author={author} postCount={count} />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-600 text-lg">No authors found.</p>
      </div>
    )}
  </main>
  
  <Footer />
</Layout>